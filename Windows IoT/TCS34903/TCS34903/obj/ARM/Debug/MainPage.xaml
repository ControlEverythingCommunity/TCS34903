        <TextBlock x:ConnectionId='8' x:Name="Text_Status" HorizontalAlignment="Center" Margin="10,580,10,0" TextWrapping="Wrap" Text="Status: Initializing ..." VerticalAlignment="Top" Width="1346" FontSize="32" TextAlignment="Center"/>
